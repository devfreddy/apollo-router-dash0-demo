# Maven Wrapper Script

DIRNAME="$( cd -P "$( dirname "$0" )" && pwd )"
MAVEN_PROJECTBASEDIR="${DIRNAME}"

WRAPPER_JAR="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.jar"
WRAPPER_PROPERTIES="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.properties"

M2_HOME="${HOME}/.m2/wrapper/dists/apache-maven-3.9.6"

if [ ! -f "$WRAPPER_JAR" ]; then
    echo "Maven wrapper jar not found. Downloading..." >&2
    mkdir -p "${MAVEN_PROJECTBASEDIR}/.mvn/wrapper"
    WRAPPER_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.2.0/maven-wrapper-3.2.0.jar"
    curl -L -o "$WRAPPER_JAR" "$WRAPPER_URL" || exit 1
fi

if [ ! -d "$M2_HOME" ]; then
    echo "Downloading Maven 3.9.6..." >&2
    mkdir -p "${HOME}/.m2/wrapper/dists"
    MAVEN_ZIP="${HOME}/.m2/wrapper/dists/apache-maven-3.9.6-bin.zip"
    curl -L -o "$MAVEN_ZIP" "https://repo.maven.apache.org/maven2/org/apache/maven/apache-maven/3.9.6/apache-maven-3.9.6-bin.zip" || exit 1
    unzip -q "$MAVEN_ZIP" -d "${HOME}/.m2/wrapper/dists" || exit 1
    rm "$MAVEN_ZIP"
fi

if [ ! -x "${M2_HOME}/bin/mvn" ]; then
    chmod +x "${M2_HOME}/bin/mvn"
fi

exec "${M2_HOME}/bin/mvn" "$@"
